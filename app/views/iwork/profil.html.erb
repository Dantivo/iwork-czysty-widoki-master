<% if !user_signed_in? %>
    <% controller.redirect_to new_user_session_url %>
    <% else %>
    <!-- OD TONT -->
    <div class="row">
    <div class="col s12 m3 l3">
        <div class="row card hoverable">
        <img class="card-image circle" width="100%">
        <%= image_tag current_user.avatar.url(:medium) %>
        <span class="card-title"> <%= current_user.imie %> </span>
        <div class="card-content">
            <!-- rzeczy profilowe -->
            <div class="row">
                Imie: <%= current_user.imie %>
            </div>
            <div class="row">
                Nazwisko: <%= current_user.nazwisko %>
            </div>
            <% unless current_user.wiek.blank? %>
            <div class="row">
                Wiek: <%= current_user.wiek %>
            </div>
            <% end %>
            <% unless current_user.miasto.blank? %>
            <div class="row">
                Miasto: <%= current_user.miasto %>
            </div>
            <% end %>
            <% unless current_user.miasto.blank? %>
            <div class="row">
                Kontakt: <%= current_user.kontakt %>
            </div>

            <div class="row">
                <i class="small material-icons">stay_current_portrait</i>
            </div>
            <div class="row">
                <i class="small material-icons">email</i>
            </div>                                    
            <div class="row">
                <i class="small material-icons">http</i>
            </div>
          <% end %>
        </div>        
        </div>
    </div>
    <div class="col s12 m9 l9">
       <div class="row card hoverable">
        <span class="card-title"> Moje CV </span>
        <div class="card-content">
          <% unless current_user.cv.blank? %>
    <div class="chip">
    <%= current_user.cv.url %>
    <i class="material-icons">close</i>
    </div>
          <% end %>
          <a class="btn-floating btn-large waves-effect waves-light red right" style="margin-bottom:10px;margin-right:-10px;"><i class="material-icons">add</i></a>
        </div>
       </div>
       <div class="row card hoverable">
        <span class="card-title"> Informacje </span>
        <div class="card-content">
            <br><br><br><br><br>
            <!-- rzeczy profilowe -->
        </div>
       </div>
    </div>
    </div>
    <% end %>
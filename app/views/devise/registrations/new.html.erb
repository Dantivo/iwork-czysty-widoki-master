


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="row fullscreen">
  <div class="col s12 m12 l12 table">
    <div class="tablecell">


      <div class="row">
        <form class="col s12">

          <div class="row">
            <div class="input-field col s6 offset-s3">
              <%= f.text_field :imie, class:'validate' %>
              <label for="imie">Imie</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6 offset-s3">
              <%= f.text_field :nazwisko, class:'validate' %>
              <label for="nazwisko">Nazwisko</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6 offset-s3">
              <%= f.email_field :email, class:'validate' %>
              <label for="email">Email</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6 offset-s3">
              <%= f.password_field :password, autocomplete: "off", class:'validate' %>
              <% if @minimum_password_length %>
                  <em>(co najmniej <%= @minimum_password_length %> znaków)</em>
              <% end %><br />
              <label for="password">Password</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6 offset-s3">
              <button class="btn waves-effect waves-light" type="submit" name="action">Zarejestruj się
                <% f.submit %>
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>
<% end %>
<%= render "devise/shared/links" %>